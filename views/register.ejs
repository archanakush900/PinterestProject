<% include ./partials/header.ejs %>


<div class="w-full h-screen bg-center bg-cover bg-zinc-300 flex items-center justify-center">
  <div class="w-80 h-100 bg-white px-2 py-10 rounded-[30px]">
    <h1 class="text-3xl mb-5 capitalize text-center font-semibold  tracking-tight text-zinc-700 leading-none ">Create New Account.</h1>
    <form action="/register" method="post">
      <input class="border-5 rounded-md  block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">
      
      <input class="border-5 rounded-md  block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
            <input class="border-5 rounded-md  block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
                  <input class="border-5 rounded-md  block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="Contact">
      <input class="border-5 rounded-md  block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
      

      <input class="border-5 rounded-full  block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full " type="submit" value="Create New Account"> 
      
     
      <p class="text-xs font-semibold bg-zinc-100 mt-2  w-1/2 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; </p>
      
      

    </form>
    <a class="inline-block mt-2 text-sm font-semibold text-zinc-500 text-center w-full" href="/"> Login Existing Account ?</a>
  </div>
</div>
